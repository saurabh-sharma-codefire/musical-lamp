generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Blob {
    id        String      @id @default(uuid()) @db.Char(36)
    data      String      @map("blob_data")
    size      Int
    createdAt DateTime    @default(now())
    DriverLog DriverLog[]

    @@index([id])
    @@map("blobs")
}

model DriverLog {
    id        String   @id @default(uuid()) @db.Char(36)
    createdAt DateTime @default(now())
    dataId    String   @map("data_id")

    Blob Blob @relation(fields: [dataId], references: [id])

    @@index([id, dataId])
    @@map("driver_log")
}
